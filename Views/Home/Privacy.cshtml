@{
    ViewData["Title"] = "Privacy Policy - Finance App";
}

<!-- Privacy Header Section -->
<div class="privacy-header bg-gradient-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <div class="privacy-icon mb-4">
                    <i class="fas fa-shield-alt fa-4x text-warning"></i>
                </div>
                <h1 class="display-4 fw-bold mb-3">Privacy Policy</h1>
                <p class="lead mb-0">Your privacy and data security are our top priorities. Learn how we protect and handle your personal information.</p>
            </div>
        </div>
    </div>
</div>

<!-- Privacy Content Section -->
<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-5">
                    
                    <!-- Last Updated -->
                    <div class="alert alert-info border-0 mb-4" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Last Updated:</strong> August 6, 2025
                    </div>

                    <!-- Introduction -->
                    <section class="mb-5">
                        <h2 class="h3 fw-bold text-primary mb-3">
                            <i class="fas fa-handshake me-2"></i>Introduction
                        </h2>
                        <p class="text-muted">
                            Welcome to Finance App ("we," "our," or "us"). We are committed to protecting your privacy and ensuring the security of your personal information. This Privacy Policy explains how we collect, use, disclose, and safeguard your information when you use our expense tracking application.
                        </p>
                        <p class="text-muted">
                            By using our service, you agree to the collection and use of information in accordance with this policy. We will not use or share your information with anyone except as described in this Privacy Policy.
                        </p>
                    </section>

                    <!-- Information We Collect -->
                    <section class="mb-5">
                        <h2 class="h3 fw-bold text-primary mb-3">
                            <i class="fas fa-database me-2"></i>Information We Collect
                        </h2>
                        
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="privacy-card p-4 border rounded">
                                    <h4 class="h5 fw-bold mb-3">
                                        <i class="fas fa-user me-2 text-success"></i>Personal Information
                                    </h4>
                                    <ul class="list-unstyled text-muted">
                                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Username and email address</li>
                                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Account creation date</li>
                                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Profile information you provide</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="privacy-card p-4 border rounded">
                                    <h4 class="h5 fw-bold mb-3">
                                        <i class="fas fa-chart-line me-2 text-info"></i>Financial Data
                                    </h4>
                                    <ul class="list-unstyled text-muted">
                                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Expense descriptions and amounts</li>
                                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Expense categories and dates</li>
                                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Financial analytics and summaries</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- How We Use Information -->
                    <section class="mb-5">
                        <h2 class="h3 fw-bold text-primary mb-3">
                            <i class="fas fa-cogs me-2"></i>How We Use Your Information
                        </h2>
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="d-flex align-items-start mb-3">
                                    <div class="flex-shrink-0 me-3">
                                        <i class="fas fa-chart-pie fa-2x text-primary"></i>
                                    </div>
                                    <div>
                                        <h5 class="fw-bold mb-2">Expense Tracking & Analytics</h5>
                                        <p class="text-muted mb-0">We use your financial data to provide expense tracking, generate insights, and help you understand your spending patterns.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex align-items-start mb-3">
                                    <div class="flex-shrink-0 me-3">
                                        <i class="fas fa-user-cog fa-2x text-success"></i>
                                    </div>
                                    <div>
                                        <h5 class="fw-bold mb-2">Account Management</h5>
                                        <p class="text-muted mb-0">We use your personal information to create and manage your account, provide customer support, and improve our services.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex align-items-start mb-3">
                                    <div class="flex-shrink-0 me-3">
                                        <i class="fas fa-shield-alt fa-2x text-warning"></i>
                                    </div>
                                    <div>
                                        <h5 class="fw-bold mb-2">Security & Compliance</h5>
                                        <p class="text-muted mb-0">We process your data to maintain security, prevent fraud, and comply with legal obligations.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Data Security -->
