<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FinanceApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FinanceApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <header class="fixed-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-wallet me-2"></i>Finance App
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        @if (ViewBag.IsLoggedIn == true){
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Expenses" ? "active" : "")" asp-area="" asp-controller="Expenses" asp-action="Index">
                                    <i class="fas fa-chart-pie me-1"></i>Expenses
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Privacy" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt me-1"></i>Privacy
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (ViewBag.IsLoggedIn == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Users" && ViewContext.RouteData.Values["Action"]?.ToString() == "Profile" ? "active" : "")" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle me-1"></i>@ViewBag.CurrentUsername
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Users" asp-action="Profile">
                                            <i class="fas fa-user me-2"></i>My Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Expenses" asp-action="Index">
                                            <i class="fas fa-chart-pie me-2"></i>My Expenses
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#" onclick="alert('Settings page coming soon!')">
                                            <i class="fas fa-cog me-2"></i>Settings
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-area="" asp-controller="Users" asp-action="Logout" method="post" class="d-inline w-100">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Users" && ViewContext.RouteData.Values["Action"]?.ToString() == "Create" ? "active" : "")" asp-area="" asp-controller="Users" asp-action="Create">
                                    <i class="fas fa-user-plus me-1"></i>Signup
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Users" && ViewContext.RouteData.Values["Action"]?.ToString() == "Login" ? "active" : "")" asp-area="" asp-controller="Users" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3" style="margin-top: 76px;">
        @RenderBody()
    </main>

    <footer class="professional-footer bg-dark text-light mt-5">
        <div class="footer-main py-5">
            <div class="container">
                <div class="row g-4">
                    <div class="col-lg-4 col-md-12">
                        <div class="footer-section company-info">
                            <div class="d-flex align-items-center justify-content-center justify-content-md-start mb-3">
                                <i class="fas fa-wallet fa-2x text-primary me-3"></i>
                                <h5 class="fw-bold text-white mb-0">Finance App</h5>
                            </div>
                            <p class="text-muted mb-3">
                                Take control of your financial future with our powerful expense tracking tools. 
                                Smart analytics, secure data, and intuitive design.
                            </p>
                            <div class="social-links">
                                <a href="#" class="social-link" title="Facebook">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                                <a href="#" class="social-link" title="Twitter">
                                    <i class="fab fa-twitter"></i>
                                </a>
                                <a href="#" class="social-link" title="LinkedIn">
                                    <i class="fab fa-linkedin-in"></i>
                                </a>
                                <a href="#" class="social-link" title="GitHub">
                                    <i class="fab fa-github"></i>
                                </a>
                                <a href="#" class="social-link" title="Instagram">
                                    <i class="fab fa-instagram"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Links -->
                    <div class="col-lg-2 col-md-6 col-sm-6">
                        <div class="footer-section">
                            <h6 class="fw-bold text-white mb-3">Quick Links</h6>
                            <ul class="footer-links list-unstyled">
                                <li class="mb-2">
                                    <a asp-controller="Home" asp-action="Index" class="footer-link">
                                        <i class="fas fa-home me-2"></i>Home
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a asp-controller="Expenses" asp-action="Index" class="footer-link">
                                        <i class="fas fa-chart-pie me-2"></i>Expenses
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a asp-controller="Users" asp-action="Profile" class="footer-link">
                                        <i class="fas fa-user me-2"></i>Profile
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a href="#" class="footer-link" onclick="alert('Dashboard coming soon!')">
                                        <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Features -->
                    <div class="col-lg-2 col-md-6 col-sm-6">
                        <div class="footer-section">
                            <h6 class="fw-bold text-white mb-3">Features</h6>
                            <ul class="footer-links list-unstyled">
                                <li class="mb-2">
                                    <a href="#" class="footer-link" onclick="alert('Feature coming soon!')">
                                        <i class="fas fa-chart-line me-2"></i>Analytics
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a href="#" class="footer-link" onclick="alert('Feature coming soon!')">
                                        <i class="fas fa-tags me-2"></i>Categories
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a href="#" class="footer-link" onclick="alert('Feature coming soon!')">
                                        <i class="fas fa-file-export me-2"></i>Export Data
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a href="#" class="footer-link" onclick="alert('Feature coming soon!')">
                                        <i class="fas fa-mobile-alt me-2"></i>Mobile App
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Support -->
                    <div class="col-lg-2 col-md-6 col-sm-6">
                        <div class="footer-section">
                            <h6 class="fw-bold text-white mb-3">Support</h6>
                            <ul class="footer-links list-unstyled">
                                <li class="mb-2">
                                    <a href="#" class="footer-link" onclick="alert('Help center coming soon!')">
                                        <i class="fas fa-question-circle me-2"></i>Help Center
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a href="#" class="footer-link" onclick="alert('Contact form coming soon!')">
                                        <i class="fas fa-envelope me-2"></i>Contact Us
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a asp-controller="Home" asp-action="Privacy" class="footer-link">
                                        <i class="fas fa-shield-alt me-2"></i>Privacy Policy
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a href="#" class="footer-link" onclick="alert('Terms coming soon!')">
                                        <i class="fas fa-file-contract me-2"></i>Terms of Service
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Newsletter -->
                    <div class="col-lg-2 col-md-6 col-sm-6">
                        <div class="footer-section">
                            <h6 class="fw-bold text-white mb-3">Stay Updated</h6>
                            <p class="text-muted small mb-3">Get the latest features and financial tips delivered to your inbox.</p>
                            <div class="newsletter-form">
                                <div class="input-group mb-2">
                                    <input type="email" id="subscriberEmail" class="form-control newsletter-input" placeholder="Your email" aria-label="Email">
                                    <button class="btn btn-primary newsletter-btn" type="button" onclick="sendSubscriptionEmail()">
                                        <i class="fas fa-paper-plane"></i>
                                    </button>
                                </div>
                                <small class="text-muted">We respect your privacy. Unsubscribe anytime.</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer Bottom -->
        <div class="footer-bottom py-3 border-top border-secondary">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6 text-center text-md-start">
                        <p class="mb-0 text-muted small">
                            &copy; 2025 Finance App. All rights reserved. 
                            <span class="text-primary">Made with <i class="fas fa-heart text-danger"></i> for better financial management.</span>
                        </p>
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <div class="footer-badges d-flex justify-content-center justify-content-md-end">
                            <span class="badge bg-success me-2">
                                <i class="fas fa-shield-check me-1"></i>Secure
                            </span>
                            <span class="badge bg-primary me-2">
                                <i class="fas fa-lock me-1"></i>Encrypted
                            </span>
                            <span class="badge bg-info">
                                <i class="fas fa-star me-1"></i>Trusted
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    
    <script>
        function sendSubscriptionEmail() {
            const email = document.getElementById('subscriberEmail').value;
            
            if (!email) {
                alert('Please enter your email address.');
                return;
            }
            
            const emailPattern = new RegExp('^[^\\s@@]+@@[^\\s@@]+\\.[^\\s@@]+$');
            if (!emailPattern.test(email)) {
                alert('Please enter a valid email address.');
                return;
            }
            
            const subject = 'Finance App Newsletter Subscription';
            const body = 'Hello,\\n\\nI would like to subscribe to the Finance App newsletter with the following email address:\\n' + email + '\\n\\nPlease add me to your mailing list for financial tips, updates, and new features.\\n\\nThank you!';
            
            const mailtoUrl = 'mailto:sazzad19@@student.sust.edu?subject=' + encodeURIComponent(subject) + '&body=' + encodeURIComponent(body);
            
            window.location.href = mailtoUrl;
            
            document.getElementById('subscriberEmail').value = '';
            
            alert('Email client opened! Please send the email to complete your subscription.');
        }
    </script>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
