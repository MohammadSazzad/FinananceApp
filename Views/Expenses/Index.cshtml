@model IEnumerable<FinanceApp.Models.Expense>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Expenses</h1>
        <a asp-action="Create" class="btn btn-success">Add New Expense</a>
    </div>

    @if (Model.Any())
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Category</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Description</td>
                        <td>$@item.Amount.ToString("F2")</td>
                        <td>@item.Category</td>
                        <td>@item.Date.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
        
        <div class="mt-3">
            <strong>Total: $@Model.Sum(e => e.Amount).ToString("F2")</strong>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4>No expenses found</h4>
            <p>You haven't added any expenses yet. <a asp-action="Create" class="btn btn-sm btn-primary">Add your first expense</a> or <a asp-action="SeedData" class="btn btn-sm btn-secondary">load sample data</a>.</p>
        </div>
    }
</div>
