@model FinanceApp.Models.DTO.UserRegistrationDTO

<div class="hero-section bg-gradient-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="text-center text-lg-start">
                    <h1 class="display-4 fw-bold mb-4">Join Our <span class="text-warning">Finance Community</span></h1>
                    <p class="lead mb-4">Take control of your financial future with our powerful expense tracking tools. Start your journey to financial freedom today!</p>
                    <div class="hero-features">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-check-circle text-warning me-3 fs-5"></i>
                            <span>Track expenses in real-time</span>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-check-circle text-warning me-3 fs-5"></i>
                            <span>Smart budget management</span>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-check-circle text-warning me-3 fs-5"></i>
                            <span>Detailed financial insights</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-6">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-white text-center py-4">
                        <div class="d-flex justify-content-center mb-3">
                            <div class="text-primary mr-2">
                                <i class="fas fa-user-plus fa-2x"></i>
                            </div>
                            <h3 class="text-dark fw-bold mb-1 ml-1 pl-1">Create Your Account</h3>
                        </div>
                        <p class="text-muted mb-0">Start managing your finances today</p>
                    </div>
                    <div class="card-body p-4">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <form asp-action="Create" method="post" class="registration-form">
                            @Html.AntiForgeryToken()
                            
                            <div class="mb-4">
                                <label asp-for="Username" class="form-label fw-semibold">
                                    <i class="fas fa-user text-primary me-2"></i>Username
                                </label>
                                <input asp-for="Username" class="form-control form-control-lg" placeholder="Choose a username" />
                                <span asp-validation-for="Username" class="text-danger small"></span>
                            </div>
                            
                            <div class="mb-4">
                                <label asp-for="Email" class="form-label fw-semibold">
                                    <i class="fas fa-envelope text-primary me-2"></i>Email Address
                                </label>
                                <input asp-for="Email" class="form-control form-control-lg" type="email" placeholder="Enter your email address" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            
                            <div class="mb-4">
                                <label asp-for="Password" class="form-label fw-semibold">
                                    <i class="fas fa-lock text-primary me-2"></i>Password
                                </label>
                                <input asp-for="Password" class="form-control form-control-lg" type="password" placeholder="Create a secure password" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                                <div class="form-text">
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Password must be at least 6 characters long
                                    </small>
                                </div>
                            </div>
                            
                            <div class="d-grid mb-4">
                                <button type="submit" class="btn btn-primary btn-lg py-3 fw-semibold">
                                    <i class="fas fa-rocket me-2"></i>Signup
                                </button>
                            </div>
                            
                            <div class="text-center">
                                <p class="mb-0 text-muted">
                                    Already have an account? 
                                    <a asp-action="Login" class="text-primary text-decoration-none fw-semibold">
                                        Sign in here
                                    </a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Custom Styles -->
<style>
    .hero-section {
        background: linear-gradient(135deg, #f172d6 0%, #00f2fe 100%);
        min-height: 90vh;
        display: flex;
        align-items: center;
    }
    
    .min-vh-75 {
        min-height: 75vh;
    }
    
    .card {
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 25px 50px rgba(0,0,0,0.15) !important;
    }
    
    .form-control {
        border-radius: 12px;
        border: 2px solid #e9ecef;
        transition: all 0.3s ease;
    }
    
    .form-control:focus {
        border-color: #4facfe;
        box-shadow: 0 0 0 0.2rem rgba(79, 172, 254, 0.25);
        transform: translateY(-2px);
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        border: none;
        border-radius: 12px;
        transition: all 0.3s ease;
    }
    
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(79, 172, 254, 0.4);
    }
    
    
    .registration-form {
        position: relative;
    }
    
    .form-label {
        color: #2d3748;
        margin-bottom: 8px;
    }
    
    .alert-danger {
        border-radius: 12px;
        border: none;
        background: linear-gradient(135deg, #ff6b6b 0%, #ff5252 100%);
        color: white;
    }
</style>

<style media="screen and (max-width: 991.98px)">
    .hero-section {
        min-height: auto;
        padding: 3rem 0;
    }
    
    .display-4 {
        font-size: 2.5rem;
    }
</style>

<style media="screen and (max-width: 576px)">
    .card-body {
        padding: 1.5rem !important;
    }
    
    .display-4 {
        font-size: 2rem;
    }
</style>